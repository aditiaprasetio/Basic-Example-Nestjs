{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "",
    "outDir": "dist",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/*.ts", "src/**/*.ts"],
  "exclude": [
    "node_modules/*",
    "node_modules/@types",
    "**/*.spec.ts",
    "clients",
    "test",
    "dist"
  ]
}